<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_legislatore__details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.mani_pc7989.webtech.legislatore_Details">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/d_leg_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_star_w"
                android:layout_marginLeft="130dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/f"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/d_leg_star"
                android:layout_toEndOf="@+id/d_leg_star"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/d_leg_fb" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/t"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/d_leg_fb"
                android:layout_toEndOf="@+id/d_leg_fb"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/d_leg_tw" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/w"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/d_leg_tw"
                android:layout_toEndOf="@+id/d_leg_tw"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/d_leg_web" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/d_leg_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/h"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="120dp"/>



        <ImageView
            android:id="@+id/d_leg_partylogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/d"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/d_leg_img"
            />

        <TextView
            android:id="@+id/d_leg_partyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Republician"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:layout_below="@+id/d_leg_img"
            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/d_leg_partylogo"
            />

        <TextView
            android:id="@+id/d_leg_name"
            android:gravity="right"
            android:foregroundGravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/d_leg_partylogo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/tv1"
            />

        <TextView
            android:id="@+id/d_leg_email"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/d_leg_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="Chamber:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/d_leg_email"
            android:id="@+id/tv3" />

        <TextView
            android:id="@+id/d_leg_chamber"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_email"/>


        <TextView
            android:id="@+id/tv4"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/tv3"
            />

        <TextView
            android:id="@+id/d_leg_contact"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_chamber"/>


        <TextView
            android:id="@+id/tv5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Start Term:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/tv4"
            />

        <TextView
            android:id="@+id/d_leg_start_term"
            android:layout_width="200dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_contact"/>


        <TextView
            android:id="@+id/tv6"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="End Term::"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/tv5"
            />

        <TextView
            android:id="@+id/d_leg_endTerm"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_start_term" />


        <TextView
            android:id="@+id/tv7"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="Term:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/tv6"
            />



        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:progress="93"
            android:scaleY="5.5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_endTerm"/>

        <TextView
            android:id="@+id/d_leg_term"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="93%"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_endTerm"
            />


        <TextView
            android:id="@+id/tv8"
            android:layout_below="@+id/tv7"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="Office:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/d_leg_office"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_term"
            />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="State:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
           android:layout_below="@+id/d_leg_office"
            />

        <TextView
            android:id="@+id/d_leg_state"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_office"
           />

        <TextView
            android:id="@+id/tv10"
            android:layout_below="@+id/tv9"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="Fax:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_row="9"
            android:layout_column="0"
            />

        <TextView
            android:id="@+id/d_leg_fax"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_state"/>

        <TextView
            android:id="@+id/tv11"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="Birthday:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_below="@+id/tv10"
            />

        <TextView
            android:id="@+id/d_leg_birthday"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="N.A"
            android:padding="10dp"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/d_leg_fontsize"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/d_leg_fax" />





    </RelativeLayout>


</ScrollView>